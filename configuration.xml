<!--
    Example configuration file for prm.
-->
<PRM>
<common>
    <!-- Directory where you store the standard No-Intro DATs -->
    <NoIntro_DAT_dir>/home/kodi/DATs-NoIntro-standard/</NoIntro_DAT_dir>

    <!-- Directory where you store the Parent/Clone No-Intro DATs -->
    <NoIntro_pclone_DAT_dir>/home/kodi/DATs-NoIntro-pclone/</NoIntro_pclone_DAT_dir>

    <!-- Not used at the moment -->
    <MAME_DAT_dir>/home/kodi/DATs-mame/</MAME_DAT_dir>

    <!-- Not used at the moment -->
    <Incoming_dir>/home/kodi/incoming/</Incoming_dir>
</common>

<collection>
    <name>nes</name>

    <!-- Not used at the moment -->
    <platform>nes</platform>

    <!-- Skip this first bytes (in decimal)... -->
    <HeaderOffset>16</HeaderOffset>
    
    <!--- ... if this condition is true. More than one condition can be specified
          using several <HeaderRule> tags.
    -->
    <HeaderRule offset="0">4E4553</HeaderRule> 

    <!-- Filename of the DAT not including directory -->
    <DAT>Nintendo - Super Nintendo Entertainment System (Combined) (20191027-010632).dat</DAT>

    <!-- Directory of the ROMs -->
    <ROM_dir>/home/kodi/ROMs/nintendo-nes/</ROM_dir>
</collection>

<collection>
    <name>megadrive</name>
    <platform>megadrive</platform>
    <DAT>Sega - Mega Drive - Genesis (20191120-213041).dat</DAT>
    <ROM_dir>/home/kodi/ROMs/sega-megadrive/</ROM_dir>
</collection>
</PRM>
